{
  "name": "terminax",
  "displayName": "TerminaX",
  "description": "Advanced SSH connection management for VSCode with MobaXterm-like features",
  "version": "1.0.0",
  "publisher": "terminax",
  "icon": "resources/icons/terminax-logo.png",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/terminax"
  },
  "bugs": {
    "url": "https://github.com/yourusername/terminax/issues"
  },
  "homepage": "https://github.com/yourusername/terminax#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminax",
          "title": "TerminaX",
          "icon": "resources/icons/terminax.svg"
        }
      ]
    },
    "views": {
      "terminax": [
        {
          "id": "terminax-hosts",
          "name": "Hosts",
          "visibility": "visible",
          "contextualTitle": "TerminaX Hosts"
        },
        {
          "id": "terminax-help",
          "visibility": "collapsed",
          "name": "Documentation",
          "contextualTitle": "TerminaX Documentation"
        }
      ]
    },
    "commands": [
      {
        "command": "terminax.addHost",
        "title": "Add SSH Host",
        "icon": "$(add)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.addHostInFolder",
        "title": "Add SSH Host to Folder",
        "icon": "$(add)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.addFolder",
        "title": "Add Folder",
        "icon": "$(new-folder)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.addFolderInFolder",
        "title": "Add Subfolder",
        "icon": "$(new-folder)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.renameFolder",
        "title": "Rename Folder",
        "icon": "$(edit)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.deleteFolder",
        "title": "Delete Folder",
        "icon": "$(trash)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.editHost",
        "title": "Edit Host",
        "icon": "$(edit)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.deleteHost",
        "title": "Delete Host",
        "icon": "$(trash)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.connect",
        "title": "Connect",
        "icon": "$(debug-start)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.connectMultiple",
        "title": "Connect Multiple Hosts",
        "icon": "$(vm-connect)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.disconnect",
        "title": "Disconnect",
        "icon": "$(debug-stop)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.searchTree",
        "title": "Search Hosts Tree",
        "icon": "$(search)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.startBroadcast",
        "title": "Start Broadcast Mode",
        "icon": "$(broadcast)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.stopBroadcast",
        "title": "Stop Broadcast Mode",
        "icon": "$(circle-slash)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.broadcastCommand",
        "title": "Send Broadcast Command",
        "icon": "$(terminal)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.focusSession",
        "title": "Focus Terminal Session",
        "icon": "$(terminal)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.exportConfig",
        "title": "Export Configuration",
        "category": "TerminaX"
      },
      {
        "command": "terminax.importConfig",
        "title": "Import Configuration",
        "category": "TerminaX"
      },
      {
        "command": "terminax.openHelp",
        "title": "Open Help",
        "icon": "$(question)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.openReadme",
        "title": "Open README",
        "icon": "$(book)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.openWorkspace",
        "title": "Open New Terminal Workspace",
        "icon": "$(terminal-bash)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.workspaceAddHosts",
        "title": "Workspace: Add Hosts",
        "icon": "$(add)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.workspaceDisconnectAll",
        "title": "Workspace: Disconnect All",
        "icon": "$(debug-stop)",
        "category": "TerminaX"
      },
      {
        "command": "terminax.workspaceEnableBroadcast",
        "title": "Workspace: Enable Broadcast",
        "icon": {
          "light": "resources/icons/broadcast-inactive.svg",
          "dark": "resources/icons/broadcast-inactive.svg"
        },
        "category": "TerminaX"
      },
      {
        "command": "terminax.workspaceDisableBroadcast",
        "title": "Workspace: Disable Broadcast",
        "icon": {
          "light": "resources/icons/broadcast-active.svg",
          "dark": "resources/icons/broadcast-active.svg"
        },
        "category": "TerminaX"
      },
      {
        "command": "terminax.workspaceToggleBroadcast",
        "title": "Workspace: Toggle Broadcast",
        "icon": "$(broadcast)",
        "category": "TerminaX"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "terminax.openWorkspace",
          "when": "activeWebviewPanelId == 'terminaxWorkspacePanel'",
          "group": "navigation@0"
        },
        {
          "command": "terminax.workspaceAddHosts",
          "when": "activeWebviewPanelId == 'terminaxWorkspacePanel'",
          "group": "navigation@1"
        },
        {
          "command": "terminax.workspaceDisconnectAll",
          "when": "activeWebviewPanelId == 'terminaxWorkspacePanel'",
          "group": "navigation@2"
        },
        {
          "command": "terminax.workspaceEnableBroadcast",
          "when": "activeWebviewPanelId == 'terminaxWorkspacePanel' && !terminax.workspaceBroadcastActive",
          "group": "navigation@3"
        },
        {
          "command": "terminax.workspaceDisableBroadcast",
          "when": "activeWebviewPanelId == 'terminaxWorkspacePanel' && terminax.workspaceBroadcastActive",
          "group": "navigation@3"
        }
      ],
      "view/title": [
        {
          "command": "terminax.addHost",
          "when": "view == terminax-hosts",
          "group": "navigation@1"
        },
        {
          "command": "terminax.addFolder",
          "when": "view == terminax-hosts",
          "group": "navigation@2"
        },
        {
          "command": "terminax.refresh",
          "when": "view == terminax-hosts",
          "group": "navigation@3"
        },
        {
          "command": "terminax.connectMultiple",
          "when": "view == terminax-hosts",
          "group": "navigation@4"
        },
        {
          "command": "terminax.openWorkspace",
          "when": "view == terminax-hosts",
          "group": "navigation@8"
        },
        {
          "command": "terminax.broadcastCommand",
          "when": "view == terminax-hosts && terminax.broadcastActive",
          "group": "navigation@5"
        },
        {
          "command": "terminax.stopBroadcast",
          "when": "view == terminax-hosts && terminax.broadcastActive",
          "group": "navigation@6"
        },
        {
          "command": "terminax.startBroadcast",
          "when": "view == terminax-hosts && !terminax.broadcastActive",
          "group": "navigation@7"
        }
      ],
      "view/item/context": [
        {
          "command": "terminax.connect",
          "when": "view == terminax-hosts && viewItem == host",
          "group": "inline@1"
        },
        {
          "command": "terminax.disconnect",
          "when": "view == terminax-hosts && viewItem == host",
          "group": "connection@2"
        },
        {
          "command": "terminax.editHost",
          "when": "view == terminax-hosts && viewItem == host",
          "group": "edit@1"
        },
        {
          "command": "terminax.deleteHost",
          "when": "view == terminax-hosts && viewItem == host",
          "group": "edit@2"
        },
        {
          "command": "terminax.addHostInFolder",
          "when": "view == terminax-hosts && viewItem == folder",
          "group": "folder@1"
        },
        {
          "command": "terminax.addFolderInFolder",
          "when": "view == terminax-hosts && viewItem == folder",
          "group": "folder@2"
        },
        {
          "command": "terminax.connectMultiple",
          "when": "view == terminax-hosts && viewItem == folder",
          "group": "connection@3"
        },
        {
          "command": "terminax.renameFolder",
          "when": "view == terminax-hosts && viewItem == folder",
          "group": "edit@1"
        },
        {
          "command": "terminax.deleteFolder",
          "when": "view == terminax-hosts && viewItem == folder",
          "group": "edit@2"
        },
        {
          "command": "terminax.startBroadcast",
          "when": "view == terminax-hosts && viewItem == folder && !terminax.broadcastActive",
          "group": "broadcast@1"
        },
        {
          "command": "terminax.broadcastCommand",
          "when": "view == terminax-hosts && viewItem == folder && terminax.broadcastActive",
          "group": "broadcast@2"
        },
        {
          "command": "terminax.stopBroadcast",
          "when": "view == terminax-hosts && viewItem == folder && terminax.broadcastActive",
          "group": "broadcast@3"
        }
      ],
      "commandPalette": [
        {
          "command": "terminax.addHostInFolder",
          "when": "false"
        },
        {
          "command": "terminax.focusSession",
          "when": "false"
        },
        {
          "command": "terminax.workspaceToggleBroadcast",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "terminax.connectMultiple",
        "key": "ctrl+alt+shift+c",
        "mac": "cmd+alt+shift+c",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.searchTree",
        "key": "ctrl+alt+shift+f",
        "mac": "cmd+alt+shift+f",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.addHost",
        "key": "ctrl+alt+shift+h",
        "mac": "cmd+alt+shift+h",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.addFolder",
        "key": "ctrl+alt+shift+n",
        "mac": "cmd+alt+shift+n",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.startBroadcast",
        "key": "ctrl+alt+shift+b",
        "mac": "cmd+alt+shift+b",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.stopBroadcast",
        "key": "ctrl+alt+shift+x",
        "mac": "cmd+alt+shift+x",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.openHelp",
        "key": "ctrl+alt+shift+/",
        "mac": "cmd+alt+shift+/",
        "when": "focusedView == terminax-hosts"
      },
      {
        "command": "terminax.openWorkspace",
        "key": "ctrl+alt+shift+t",
        "mac": "cmd+alt+shift+t",
        "when": "focusedView == terminax-hosts"
      }
    ],
    "configuration": {
      "title": "TerminaX",
      "properties": {
        "terminax.keepaliveInterval": {
          "type": "number",
          "default": 30000,
          "description": "SSH keepalive interval in milliseconds"
        },
        "terminax.keepaliveCountMax": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of keepalive attempts"
        },
        "terminax.terminalScrollback": {
          "type": "number",
          "default": 1000,
          "description": "Terminal scrollback buffer size"
        },
        "terminax.healthChecks.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable background SSH port health checks for host indicators."
        },
        "terminax.healthChecks.intervalMs": {
          "type": "number",
          "default": 60000,
          "description": "Interval for background host health checks in milliseconds."
        },
        "terminax.healthChecks.timeoutMs": {
          "type": "number",
          "default": 5000,
          "description": "Timeout for each health check probe in milliseconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/ssh2": "^1.15.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "ssh2": "^1.15.0",
    "uuid": "^9.0.1",
    "xterm": "^5.3.0"
  }
}
